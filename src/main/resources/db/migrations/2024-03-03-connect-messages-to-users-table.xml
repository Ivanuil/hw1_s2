<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-03-02-add-auth" author="ivanuil">

        <addForeignKeyConstraint baseTableName="message"
                                 baseColumnNames="author"
                                 constraintName="fk_message_author"
                                 referencedTableName="users"
                                 referencedColumnNames="username"/>

        <addForeignKeyConstraint baseTableName="message"
                                 baseColumnNames="recipient"
                                 constraintName="fk_message_recipient"
                                 referencedTableName="users"
                                 referencedColumnNames="username"/>

    </changeSet>

</databaseChangeLog>